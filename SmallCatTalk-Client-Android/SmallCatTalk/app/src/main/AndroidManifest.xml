<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dnjsr.smtalk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_smtalk_laoding"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeActionBar">
        <activity android:name=".GroupRoomCreateActivity"></activity>
        <activity android:name=".ProfileModifyActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".MainActivity"
            android:label="@string/friend" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".ProfilepictureActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".ChatRoomActivity" />
    </application>

</manifest>